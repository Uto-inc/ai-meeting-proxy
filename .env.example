# Core app settings
APP_NAME=AI Meeting Proxy PoC
LOG_LEVEL=INFO
APP_ENV=dev
ENABLE_DOCS=true

# GCP settings
GCP_PROJECT_ID=your-gcp-project-id
GCP_LOCATION=us-central1

# Speech-to-Text settings
STT_LANGUAGE_CODE=ja-JP
STT_MODEL=latest_long

# Vertex AI (Gemini) settings
GEMINI_MODEL=gemini-1.5-pro

# API security (set in production)
# API_KEY=change-this-in-production

# Request limits
MAX_AUDIO_SIZE_BYTES=10485760
MAX_INPUT_CHARS=20000

# Recall.ai settings (bot integration)
# RECALL_API_KEY=your-recall-api-key
RECALL_BASE_URL=https://us-west-2.recall.ai/api/v1
# WEBHOOK_BASE_URL=https://your-server.example.com

# Avatar bot settings
PERSONA_PROFILE_PATH=knowledge/profile.md
KNOWLEDGE_DIR=knowledge/docs
BOT_DISPLAY_NAME=AI Avatar
# RESPONSE_TRIGGERS=keyword1,keyword2
SILENCE_TIMEOUT_SECONDS=3
MAX_CONVERSATION_HISTORY=20

# TTS settings (Google Cloud Text-to-Speech)
TTS_VOICE_NAME=ja-JP-Neural2-B
TTS_SPEAKING_RATE=1.0

# Optional: path to service account key file
# Prefer Workload Identity or Cloud Run service account in production.
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
